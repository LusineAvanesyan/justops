data "aws_ami" "ec2-db" {
  most_recent = true
  owners      = ["self"]

  filter {
    name   = "name"
    values = ["ec2-db"]
  }

  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
}

data "aws_key_pair" "ec2_key" {
  key_name = "key-for-db"
}
